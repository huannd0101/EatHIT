<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_margin="10dp"
    android:background="@drawable/bg_rev_cmt"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardCornerRadius="30dp">

            <ImageView
                android:id="@+id/img_avt_lg1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:clipChildren="true"
                android:src="@drawable/ic_baseline_person_24" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_Fullname_createP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:hint="fullnam"
            android:padding="10px"
            android:textSize="25dp"
            android:textStyle="bold" />
    </LinearLayout>

    <EditText
        android:id="@+id/edt_content_createP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/origin"
        android:hint="Bạn đang nghĩ gì thế ???"
        android:padding="30dp"
        android:textColor="@color/white" />

    <LinearLayout
        android:id="@+id/add_Image_CreateP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Thêm ảnh: "
            android:textSize="30dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_baseline_photo_camera_back_24" />
        <ImageView
            android:id="@+id/img_choose_img_to_post"
            android:layout_marginLeft="20dp"
            android:src="@drawable/android2"
            android:visibility="gone"
            android:layout_width="100dp"
            android:layout_height="100dp"
            />
    </LinearLayout>


    <Button
        android:id="@+id/btn_createP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:backgroundTint="@color/dis_Like"
        android:text="Đăng" />

    <LinearLayout
        android:id="@+id/progress_postsing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/tv_Loading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loadding...."
            android:textAlignment="center"
            android:textSize="20dp" />
    </LinearLayout>


</LinearLayout>